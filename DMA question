#include<iostream>//header file...
#include<cstdlib>//memory allocation header file...
using namespace std;

//calloc function...

int main()
{
	int *ptr;
	int n;
	cout<<"enter value";
	cin>>n;
	ptr=(int*)calloc(n,sizeof(int));
	if(ptr !=NULL)
	{
		for(int a=0; a<n; a++)
		{
		//	cout<< "enter value"<<endl;
			cin>>ptr[a];
		}
	}
	else
	{
		cout<<"null hai";
	}
	for(int a=0; a<n; a++)
	{
		cout<<ptr[a];
	}	
}


//malloc function...

int main()
{
	int *ptr;
	int n;
	cout<<"enter value";
	cin>>n;

	ptr=(int*)malloc(n*sizeof(int));
	if(ptr !=NULL)
	{
		
		for(int a=0; a<n; a++)
		{
			
			cin>>ptr[a];
		}
	}
	else
	{
		cout<<"null hai";
	}
	for(int a=0;a<n;a++)
	{
		cout<<ptr[a];
	}
}



//realloc function...

int main()
{
	int *ptr;
	int n;
	cout<<"enter value";
	cin>>n;

	ptr=(int*)malloc(n*sizeof(int));
	if(ptr !=NULL)
	{
		
		for(int a=0; a<n; a++)
		{
			cin>>ptr[a];
		}
	}
	else
	{
		cout<<"null hai";
	}
	for(int a=0; a<n; a++)
	{
		cout<<ptr[a];
	}
	
	int us;
	cout<<"enter block no.";
	cin>>us;
	ptr=(int*)realloc(ptr,us*sizeof(int));
	if(ptr !=NULL)
	{
		for(int a=0; a<n; a++)
		{
			ptr[a]+1;
			
			cin>>ptr[a];
		}
	}
	else
	{
		cout<<"khali hai";
	}
	for(int a=0; a<us; a++)
	{
		cout<<ptr[a];
	}
}



//free function...

int main()
{
	int *ptr;
	int n;
	cout<<"enter value";
	cin>>n;

	ptr=(int*)malloc(n*sizeof(int));
	if(ptr !=NULL)
	{
		
		for(int a=0; a<n; a++)
		{
			cin>>ptr[a];
		}
	}
	else
	{
		cout<<"null hai";
	}
	for(int a=0; a<n; a++)
	{
		cout<<ptr[a];
	}
	
	int us;
	cout<<"enter block no.";
	cin>>us;
	ptr=(int*)realloc(ptr,us*sizeof(int));
	if(ptr !=NULL)
	{
		for(int a=0; a<n; a++)
		{
			ptr[a]+1;
			
			cin>>ptr[a];
		}
	}
	else
	{
		cout<<"khali hai";
	}
	for(int a=0; a<us; a++)
	{
		cout<<ptr[a];
	}
	free(ptr);
}